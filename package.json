{
  "name": "nextjs-rag-chatbot",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "predev": "npm run validate:env",
    "build": "next build",
    "prebuild": "npm run validate:env",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:api": "jest --testPathPattern=tests/api",
    "test:components": "jest --testPathPattern=tests/components",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:auth": "jest --testNamePattern=auth",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:vercel": "tsx scripts/test-vercel-deployment.ts",
    "test:local": "tsx scripts/test-local-simple.ts",
    "test:local:full": "tsx scripts/test-local-enhanced.ts",
    "validate:env": "tsx scripts/validate-env.ts",
    "validate:deployment": "tsx scripts/validate-deployment.ts",
    "setup:vercel": "tsx scripts/setup-vercel-env.ts",
    "type-check": "tsc --noEmit",
    "quality:check": "tsx scripts/quality-check.ts",
    "quality:fix": "npm run lint:fix && npm run format",
    "prepare": "husky install",
    "prepare:deploy": "npm run quality:check && npm run build",
    "deploy": "tsx scripts/deploy-to-vercel.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^0.0.66",
    "@qdrant/js-client-rest": "^1.12.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.3",
    "@upstash/redis": "^1.34.3",
    "ai": "^3.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "langchain": "^0.2.0",
    "langfuse": "^2.21.0",
    "lucide-react": "^0.562.0",
    "next": "15.1.3",
    "openai": "^4.67.3",
    "pdf-parse": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.27",
    "@types/pdf-parse": "^1.1.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.1.3",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-testing-library": "^7.15.4",
    "fast-check": "^3.23.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16",
    "web-streams-polyfill": "^4.2.0"
  }
}
